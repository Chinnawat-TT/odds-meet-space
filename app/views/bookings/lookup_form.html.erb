<div class="max-w-xl mx-auto mt-10 p-6 border rounded shadow">
  <h1 class="text-2xl font-semibold mb-4 text-center">Check Your Bookings</h1>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: bookings_lookup_path, method: :post, local: true, data: { turbo: false } do |f| %>
    <div class="mb-4">
      <%= f.label :email, "Your Email", class: "block mb-1 font-medium" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded", placeholder: "you@odds.team", required: true %>
    </div>

    <div class="text-center">
      <%= f.submit "Check Bookings", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
